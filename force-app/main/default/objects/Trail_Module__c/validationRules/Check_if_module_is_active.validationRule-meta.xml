<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Check_if_module_is_active</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISNEW(), Module__r.IsActive__c = False)</errorConditionFormula>
    <errorDisplayField>Module__c</errorDisplayField>
    <errorMessage>The module you are trying to add is not active.</errorMessage>
</ValidationRule>
